{% extends "layout.html.twig" %}

{% block title %}Liste des Projets
{% endblock %}

{% block content %}
	<div class="app-title">
		<div>
			<h1>
				<i class="fa fa-tasks"></i>&nbsp;{{ appTitle }}</h1>
		</div>
		<ul class="app-breadcrumb breadcrumb">
			<li class="breadcrumb-item">
				<a href="{{path('dashboard')}}">
					<i class="fa fa-home fa-lg"></i>
				</a>
			</li>
			<li class="breadcrumb-item">{{ appTitle }}</li>
		</ul>
	</div>
	<div class="tile pb-5">
		<a href="{{path('project_edit')}}" class="btn btn-primary float-right mb-4">
			<i class="fa fa-plus-circle mr-2"></i>Ajouter un projet</a>
		<div class="table-responsive">
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>Nom</th>
						<th>Description</th>
						<th>Prix de vente</th>
						<th>Date de cr√©ation</th>
						<th>Date de livraison</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for project in projects %}
						<tr>
							<td>{{ project.name }}</td>
							<td>{{ project.description }}</td>
							<td>{{ project.salePrice }}</td>
							<td>{{ project.startDate | date('d/m/Y')}}</td>
							<td>{{ project.deliveryDate | date('d/m/Y')}}</td>
							<td>
								<a href="{{path('project_detail')}}" class="btn btn-secondary btn-sm">
									<i class="fa fa-eye mr-0"></i>
								</a>
								<a href="{{path('project_edit')}}" class="btn btn-info btn-sm">
									<i class="fa fa-pencil mr-0"></i>
								</a>
								<a href="#" class="btn btn-primary btn-sm">
									<i class="fa fa-check mr-0"></i>
								</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<hr/>
		<nav class="float-right">
			{{ knp_pagination_render(projects) }}
	</div>

{% endblock %}
