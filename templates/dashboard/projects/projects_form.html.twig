{% extends "layout.html.twig" %}

{% block title %}Edition d'un projet - PROCOST{% endblock %}

{% block content %}
<div class="app-title">
        <div>
            <h1>
                <i class="fa fa-tasks"></i>&nbsp;{{ appTitle }}</h1>
        </div>
        <ul class="app-breadcrumb breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{path('dashboard')}}">
                    <i class="fa fa-home fa-lg"></i>
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{path('projects')}}">Projets</a>
            </li>
            <li class="breadcrumb-item">{{ appTitle }}</li>
        </ul>
    </div>
    <div class="tile">
            <div class="alert alert-dismissible alert-success my-4">
                <button class="close" type="button" data-dismiss="alert">×</button><strong>Well done!</strong> Message flash.
            </div>
        <form class="form-horizontal">
            <section>
                <h3>Informations générales</h3>
                <div class="row mt-4">
                    <div class="offset-md-4 col-md-8">
                        <div class="form-group row">
                            <label class="control-label col-md-3">Projet</label>
                            <div class="col-md-9">
                                <input class="form-control" type="text">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-3">Description</label>
                            <div class="col-md-9">
                                <input class="form-control" type="text">
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <hr/>
            <section>
                <h3>Production</h3>
                <div class="row mt-4">
                    <div class="offset-md-4 col-md-8">
                        <div class="form-group row">
                            <label for="select-job" class="control-label col-md-3">Métier</label>
                            <div class="col-md-9">
                                <select class="form-control" id="select-job">
                                    <option>Métier 1</option>
                                    <option>Métier 2</option>
                                    <option>Métier 3</option>
                                    <option>Métier 4</option>
                                    <option>Métier 5</option>
                                    <option>Métier 6</option>
                                    <option>Métier 7</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-3">Prix de vente (en €)</label>
                            <div class="col-md-9">
                                <input class="form-control" type="number" min="0">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-3">Date de démarrage</label>
                            <div class="col-md-9">
                                <input class="form-control" type="date">
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <hr/>
            <div class="row">
                <div class="col-sm-12 col-md-6 text-center">
                    <button type="submit" class="btn btn-success btn-lg"><i class="fa fa-save"></i>Enregistrer</a>
                </div>
                <div class="col-sm-12 col-md-6 text-center">
                    <button type="submit" class="btn btn-danger btn-lg"><i class="fa fa-trash"></i>Supprimer</a>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
    