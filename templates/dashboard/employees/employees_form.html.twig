{% extends "layout.html.twig" %}
{% block title %}Edition d'un employé - PROCOST
{% endblock %}
{% block content %}
	<div class="app-title">
		<div>
			{% if isEdit %}
				<h1>
					<i class="fa fa-users"></i>&nbsp;Edition de
					{{employee.firstName}}
					{{employee.lastName }}</h1>
			{% else %}
				<h1>
					<i class="fa fa-users"></i>&nbsp;Création d'un employé</h1>
			{% endif %}
		</div>
		<ul class="app-breadcrumb breadcrumb">
			<li class="breadcrumb-item">
				<a href="{{ path('dashboard') }}">
					<i class="fa fa-home fa-lg"></i>
				</a>
			</li>
			<li class="breadcrumb-item">
				<a href="{{ path('employees') }}">Employés</a>
			</li>
			{% if isEdit %}
				<li class="breadcrumb-item">Edition d'un employé</li>
			{% else %}
				<li class="breadcrumb-item">Création d'un employé</li>
			{% endif %}
		</ul>
	</div>
	<div class="tile">
		<div class="row">
			<div class="col">
				{% for flash_type, messages in app.flashes %}
					{% for message in messages %}
						<div class="alert alert-{{ flash_type }}" alert-dismissible fade show role="alert">
							{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{% endfor %}
				{% endfor %}
			</div>
		</div>
		{{ form_start(form) }}
		<section>
			<h3>Informations générales</h3>
			<div class="row mt-4">
				<div class="offset-md-4 col-md-8">
					<div class="form-group row">
						<div class="col-md-3 text-right align-self-center">
							{{ form_label(form.firstName) }}
						</div>
						<div class="col-md-9">
							{{ form_widget(form.firstName)}}
							{{ form_errors(form.firstName) }}
						</div>
					</div>
					<div class="form-group row">
						<div class="col-md-3 text-right align-self-center">
							{{ form_label(form.lastName) }}
						</div>
						<div class="col-md-9">
							{{ form_widget(form.lastName)}}
							{{ form_errors(form.lastName) }}
						</div>
					</div>
					<div class="form-group row">
						<div class="col-md-3 text-right align-self-center">
							{{ form_label(form.email) }}
						</div>
						<div class="col-md-9">
							{{ form_widget(form.email)}}
							{{ form_errors(form.email) }}
						</div>
					</div>
				</div>
			</div>
		</section>
		<hr/>
		<section>
			<h3>Production</h3>
			<div class="row mt-4">
				<div class="offset-md-4 col-md-8">
					<div class="form-group row">
						<div class="col-md-3 text-right align-self-center">
							{{ form_label(form.job) }}
						</div>
						<div class="col-md-9">
							{{ form_widget(form.job)}}
							{{ form_errors(form.job) }}
						</div>
					</div>
					<div class="form-group row">
						<div class="col-md-3 text-right align-self-center">
							{{ form_label(form.cost) }}
						</div>
						<div class="col-md-9">
							{{ form_widget(form.cost)}}
							{{ form_errors(form.cost) }}
						</div>
					</div>
					<div class="form-group row">
						<div class="col-md-3 text-right align-self-center">
							{{ form_label(form.hireDate) }}
						</div>
						<div class="col-md-9">
							{{ form_widget(form.hireDate)}}
							{{ form_errors(form.hireDate) }}
						</div>
					</div>
				</div>
			</div>
		</section>
		<hr/>
		<div class="row">
			<div class="col-sm-12 col-md-6 text-center">
				<button type="submit" class="btn btn-success btn-lg">
					<i class="fa fa-save"></i>Enregistrer</a>
			</div>
			{% if isEdit %}
				<div class="col-sm-12 col-md-6 text-center">
					<button type="submit" class="btn btn-danger btn-lg">
						<i class="fa fa-trash"></i>Supprimer</a>
				</div>
			{% endif %}
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}
