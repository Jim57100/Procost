{% extends "layout.html.twig" %}

{% block title %}Employés - PROCOST
{% endblock %}

{% block content %}
	<div class="app-title">
		<div>
			<h1>
				<i class="fa fa-users"></i>&nbsp;{{ appTitle }}</h1>
		</div>
		<ul class="app-breadcrumb breadcrumb">
			<li class="breadcrumb-item">
				<a href="{{path('dashboard')}}">
					<i class="fa fa-home fa-lg"></i>
				</a>
			</li>
			<li class="breadcrumb-item">{{ appTitle }}</li>
		</ul>
	</div>
	<div class="tile pb-5">
		<a href="{{ path('employees_edit') }}" class="btn btn-primary float-right mb-4">
			<i class="fa fa-plus-circle mr-2"></i>Ajouter un employé</a>
		<div class="table-responsive">
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>Prénom</th>
						<th>Nom</th>
						<th>Email</th>
						<th>Métier</th>
						<th>Coût journalier</th>
						<th>Date d'embauche</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for employee in employees %}
						<tr>
            <td>{{ employee.firstName }}</td>    
            <td>{{ employee.lastName }}</td>    
						<td>{{ employee.email }}</td>
						<td>{{ employee.job.label }}</td>
						<td>{{ employee.cost }}</td>
						<td>{{ employee.hireDate | date('d/m/Y')}}</td>
						<td>
							<a href="{{ path('employees_detail', {'id' : employee.id}) }}" class="btn btn-secondary btn-sm">
								<i class="fa fa-eye mr-0"></i>
							</a>
							<a href="{{ path('employees_edit', {'id' : employee.id}) }}" class="btn btn-info btn-sm">
								<i class="fa fa-pencil mr-0"></i>
							</a>
						</td>
					</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<hr/>
		<nav class="float-right">
		{{ knp_pagination_render(employees) }}
	</nav>
</div>
{% endblock %}
