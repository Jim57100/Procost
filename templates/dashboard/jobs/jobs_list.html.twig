{% extends "layout.html.twig" %}

{% block title %}
	{{ appTitle }}
	- PROCOST
{% endblock %}
{% block content %}
	<div class="app-title">
		<div>
			<h1>
				<i class="fa fa-cog"></i>&nbsp;{{ appTitle }}</h1>
		</div>
		<ul class="app-breadcrumb breadcrumb">
			<li class="breadcrumb-item">
				<a href="{{path('dashboard')}}">
					<i class="fa fa-home fa-lg"></i>
				</a>
			</li>
			<li class="breadcrumb-item">{{ appTitle }}</li>
		</ul>
	</div>
	<div class="tile pb-5">
		<a href="{{path('jobs_create')}}" class="btn btn-primary float-right mb-4">
			<i class="fa fa-plus-circle mr-2"></i>Ajouter un métier</a>
		<div class="table-responsive">
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>Métier</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for job in jobs %}
						<tr>
							<td>{{ job.label }}</td>
							<td>
								<a href="{{path('jobs_edit', {'id' : job.id } )}}" class="btn btn-info btn-sm">
									<i class="fa fa-pencil mr-0"></i>
								</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<hr/>
		<nav class="float-right">
			{{ knp_pagination_render(jobs) }}
		</nav>
	</div>
{% endblock %}
